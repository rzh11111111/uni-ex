				    }
			}
		}
	    ,{
            "path" : "pages/news/news",
            "style": {
            	"navigationBarTitleText": "新闻",
            	"usingComponents": { //按需引入单个页面组件
            	      "van-button": "/wxcomponents/vant/button/index"
            	    },
					"enablePullDownRefresh":true //开启下拉
